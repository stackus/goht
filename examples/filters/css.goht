package filters

// You can include CSS into your templates using the `css` filter. Inside
// this filter you may include interpolated values.

var color = "red"

@goht Css() {
	:css
		.color {
			color: #{color};
		}
}

@haml HamlCss() {
	:css
		.color {
			color: #{color};
		}
}

@slim SlimCss() {
	:css
		.color {
			color: #{color};
		}
}
